<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netflix2App" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:listPreferredItemHeightSmall">42dp</item>

    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Design" parent="Base.Theme.Design"></style>


    <style name="Base.Theme.Design" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorOnBackground">#ffff</item>
        <item name="actionMenuTextColor">@color/purple_700</item>
        <item name="colorPrimary">@color/toolbarColor</item>
        <item name="colorPrimaryDark">@color/overToolbarColor</item>
        <item name="colorAccent">#673AB7</item>
        <item name="android:textColorPrimary">#9C27B0</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ThemeOfScreenToolbar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">#070707</item><!--Over Toolbar-->
        <item name="colorPrimary">#000000</item><!--hamburger Navigation Button-->
        <item name="colorControlNormal">#F7F3F4</item><!--Navigation Button color-->
        <item name="colorOnPrimary">#FF5722</item>
        <item name="colorAccent">#0357F7</item><!--Toolbar color-->
        <item name="itemTextColor">#000000</item>
        <item name="android:textColorPrimary">#060606</item>
        <item name="android:textColor">#000000</item><!--Text toolbar-->
        <item name="colorOnBackground">#FF9800</item>
        <item name="android:colorBackground">#FEFDFD</item><!--Background-->
        <item name="colorSecondary">#B71B1B</item>
        <item name="colorSecondaryVariant">#0B0B0B</item>
        <item name="colorOnSecondary">#3F51B5</item>

    </style>



</resources>